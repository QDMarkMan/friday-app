{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hits-app",
  "version": "0.1.0",
  "identifier": "com.hits-app.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "hits",
        "width": 468,
        "height": 400,
        "minWidth": 368,
        "minHeight": 300,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "shadow": true
      },
      {
        "label": "setting",
        "title": "hits setting",
        "url": "/setting",
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "shadow": true,
        "visible": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
